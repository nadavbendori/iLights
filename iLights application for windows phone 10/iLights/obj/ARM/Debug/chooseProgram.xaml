<Page
    x:Class="iLights.chooseProgram"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iLights"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/newBack.png" 
                    Stretch="UniformToFill" />
        </Grid.Background>
        <Button x:ConnectionId='1' x:Name="Players" Content="Players" HorizontalAlignment="Left" Height="80" Margin="66,106,0,0" VerticalAlignment="Top" Width="230"  FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" FontSize="30"                    >
            <Button.Background>
                <ImageBrush Stretch="Fill"/>
            </Button.Background>
        </Button>

        <TextBlock x:ConnectionId='2' x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="140,500,0,0" Height="31" Width="82">
        </TextBlock>

        <Button x:ConnectionId='3' x:Name="backToMain" Content="Back To Main" HorizontalAlignment="Right" Margin="0,465,184,0" VerticalAlignment="Top" RenderTransformOrigin="-0.151,0.854" Background="{x:Null}"                    FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" Width="166"/>
        <TextBlock x:ConnectionId='4' x:Name="testTextBlock" HorizontalAlignment="Left" Margin="176,350,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:ConnectionId='5' x:Name="TrainingButton" Content="Trainings" HorizontalAlignment="Left" Height="85" Margin="66,235,0,0" VerticalAlignment="Top" Width="230" FontFamily="Sitka Small"                         Foreground="AntiqueWhite" FontWeight="Bold" FontSize="30" >
            <Button.Background>
                <ImageBrush Stretch="Fill"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>

