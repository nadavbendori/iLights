<Page
    x:Class="iLights.inTraining"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iLights"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <FlyoutBase.AttachedFlyout>
            <TimePickerFlyout/>
        </FlyoutBase.AttachedFlyout>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/newBack.png" 
                    Stretch="UniformToFill" />
        </Grid.Background>
        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="178,0,0,233" Height="31" Width="77" Foreground="AntiqueWhite" FontFamily="Sitka Small" Text="" FontSize="30">
        </TextBlock>
        <TextBlock x:ConnectionId='2' x:Name="textBlock2" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="58,0,0,233" Height="31" Width="115" Foreground="AntiqueWhite" FontFamily="Sitka Small" Text="" FontSize="30">
        </TextBlock>



        <TextBlock x:ConnectionId='3' Name="lblTime" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontFamily="Sitka Small" Text="Go" Margin="157,0,0,329" Foreground="AntiqueWhite" RenderTransformOrigin="0.472,0.462" Width="82"/>
        <TextBlock x:ConnectionId='4' Name="time_left" FontSize="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontFamily="Sitka Small" Text="Time Left:" Margin="71,0,0,368" Foreground="AntiqueWhite" RenderTransformOrigin="-0.154,0.32" Width="215"/>



        <Button x:ConnectionId='5' x:Name="Go_Back" Content="Go Back" HorizontalAlignment="left"  VerticalAlignment="Bottom" RenderTransformOrigin="-0.151,0.854" Background="{x:Null}" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" Margin="10,0,0,35"                  />
        <Button x:ConnectionId='6' x:Name="submitButton" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Bottom" RenderTransformOrigin="0.443,1.574" Margin="95,0,0,153" Height="75" Width="160" FontFamily="Sitka Small" Foreground="AntiqueWhite"  FontSize="40"                 >
            <Button.Background>
                <ImageBrush Stretch="Fill"/>
            </Button.Background>
        </Button>





    </Grid>
</Page>

