<Page
    x:Class="iLights.AddPlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iLights"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >

        <Grid.Background>
            <ImageBrush ImageSource="Assets/newBack.png" 
                    Stretch="UniformToFill" />
        </Grid.Background>

        <TextBlock x:ConnectionId='1' x:Name="text1" HorizontalAlignment="Left" Height="32" Margin="61,42,0,0" TextWrapping="Wrap" Text="name of player" VerticalAlignment="Top" Width="218" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" FontSize="26
                   "/>
        <TextBox x:ConnectionId='2' x:Name="nameBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="0,79,69,0" Width="222" Height="23" RenderTransformOrigin="0.518,1.891"/>
        <Button x:ConnectionId='3' x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.443,1.574" Margin="69,312,0,0" Height="46" Width="160" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" FontSize="30"                     >
            <Button.Background>
                <ImageBrush Stretch="Fill"/>
            </Button.Background>
        </Button>

        <TextBlock x:ConnectionId='4' x:Name="errorBox" HorizontalAlignment="Left" Margin="48,475,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="294" Foreground="AntiqueWhite" FontWeight="Bold" Height="20"/>
        <Button x:ConnectionId='5' x:Name="Go_Back" Content="Go Back" HorizontalAlignment="left"  VerticalAlignment="Bottom" RenderTransformOrigin="-0.151,0.854" Background="{x:Null}" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" Margin="10,0,0,95"                  />
    </Grid>
</Page>

