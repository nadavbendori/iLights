<Page
    x:Class="iLights.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iLights"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Height="640" VerticalAlignment="Bottom">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/newBack.png" 
                    Stretch="UniformToFill" />
        </Grid.Background>



        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="569*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='1' x:Name="login" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="2.749,2.833" Height="45" Width="167" Margin="101,260,92,0"                     Grid.Row="1" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" FontSize="30" >
            <Button.Background>
                <ImageBrush Stretch="Fill"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='2' x:Name="welcomeBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="22,47,-4,0" Height="84" Width="342" FontSize="75" FontFamily="Sitka Small" Grid.Row="1" RenderTransformOrigin="0.5,0.5" Text="iLights!" FontWeight="Bold" Foreground="AntiqueWhite" FontStyle="Italic" />
        <TextBlock x:ConnectionId='3' x:Name="text1" HorizontalAlignment="Left" Height="32" Margin="-2,161,0,0" TextWrapping="Wrap" Text="User name" VerticalAlignment="Top" Width="170" Grid.Row="1" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" FontSize="30"/>
        <TextBlock x:ConnectionId='4' x:Name="text1_Copy" HorizontalAlignment="Left" Height="24" Margin="0,198,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="158" Grid.Row="1" FontFamily="Sitka Small"  Foreground="AntiqueWhite" FontWeight="Bold" FontSize="30"/>
        <TextBox x:ConnectionId='5' x:Name="nameBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="104,161,0,0" Width="167" Grid.Row="1" Height="32" RenderTransformOrigin="0.518,1.891"/>
        <TextBox x:ConnectionId='6' x:Name="passBox" HorizontalAlignment="Right" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="104,198,0,0" Width="167" Height="32" Grid.Row="1"/>
        <Button x:ConnectionId='7' x:Name="registerButton" Content="Sign Up" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.472,0.5" Margin="101,359,0,0" Height="46" Width="167" Grid.Row="1"                      FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" FontSize="30">
            <Button.Background>
                <ImageBrush Stretch="Fill"/>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='8' x:Name="text1_Copy1" HorizontalAlignment="Left" Height="24" Margin="109,330,0,0" TextWrapping="Wrap" Text="Not registered yet?" VerticalAlignment="Top" Width="159" Grid.Row="1" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold"/>
        <TextBlock x:ConnectionId='9' x:Name="errorBox" HorizontalAlignment="Left" Margin="22,235,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="294" Foreground="AntiqueWhite" FontWeight="Bold"/>
        <Button x:ConnectionId='10' x:Name="quickGame" Content="  Quick&#10;Training" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.472,0.5" Margin="101,432,0,0" Height="101" Width="167" Grid.Row="1"                             FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold" FontSize="30">
            <Button.Background>
                <ImageBrush Stretch="Fill"/>
            </Button.Background>
        </Button>



    </Grid>

</Page>

