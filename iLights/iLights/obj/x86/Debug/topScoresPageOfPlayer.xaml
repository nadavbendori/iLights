<Page x:ConnectionId='1'
    x:Class="iLights.topScoresPageOfPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iLights"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/newBack.png" 
                    Stretch="UniformToFill" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>


        <ListView x:ConnectionId='2'                               Margin="0,44,0,116" >
            <ListView.ItemTemplate >
                <DataTemplate                           >
                    <Border x:ConnectionId='4' Margin="5" Padding="5" >

                        <StackPanel HorizontalAlignment="Center">
                       
                        <TextBlock x:ConnectionId='5' FontSize="14"                              HorizontalAlignment="Center" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold"  />
                        <TextBlock x:ConnectionId='6' FontSize="14"                               HorizontalAlignment="Center" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold"/>
                        <TextBlock x:ConnectionId='7' FontSize="14"                                         HorizontalAlignment="Center" FontFamily="Sitka Small" Foreground="AntiqueWhite" FontWeight="Bold"/>
                        
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>








        <Button x:ConnectionId='3' x:Name="Go_Back" Content="Go Back" HorizontalAlignment="left"  VerticalAlignment="Top" RenderTransformOrigin="-0.151,0.854" Background="{x:Null}" FontFamily="Sitka Small" Grid.Row="1" Foreground="AntiqueWhite" FontWeight="Bold" Margin="10,34,0,0"                 />





    </Grid>
</Page>

